datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator db {
    provider = "go run github.com/prisma/prisma-client-go"
}

model Job {
    id           String   @id @default(cuid())
    createdAt    DateTime @default(now())
    scheduledFor DateTime
    body         Json?

    @@index([scheduledFor])
}
